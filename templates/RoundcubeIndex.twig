{% extends 'commonIframe.twig' %}

{% set title = {'logo': "emblem-companies",
                'title': "My emails",
                'help': "View and manage your emails"} %}

{% block content %}
<div id="iframeMain">
    <iframe frameborder=0 src="{{ SERVER_ADDRESS }}/modules/Roundcube/roundcubemail/index.php?_igestis_auth_key={{ igestisAuthKey }}"></iframe>
</div>
<script>
$(function(){
    resizeIframe();
});

function resizeIframe() {
    var height = $('body').height() - $('#iframeMain').get(0).offsetTop;
    $('#iframeMain').css('height', height+'px');
    $('#iframeMain').height(height);    
}

$(window).resize(function() {
  resizeIframe();
});
</script>

{% endblock %}